import React from 'react';

// -----------------------------
// Color Tokens
// -----------------------------
const COLORS = {
  black: '#000000',
  primerGreen: '#34C759', 
  white: '#FFFFFF',
  darkGray: '#111214',
  softGray: '#F2F4F7'
};

// -----------------------------
// Logo: SVG component
// Description: Circular badge with stylized 'P' forming a road curve.
// - Black circular background
// - White 'P' stroke with a green road stripe running through
// -----------------------------
export function PrimerLogo({ size = 120 }) {
  return (
    <svg width={size} height={size} viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg">
      <circle cx="60" cy="60" r="58" fill={COLORS.black} />
      {/* Outer white P shape */}
      <path d="M44 30 C62 30, 76 40, 76 58 C76 76, 54 78, 44 78 Z" fill={COLORS.white} />
      {/* Inner green road stripe */}
      <path d="M60 36 C68 38, 72 46, 72 58 C72 70, 60 72, 52 72" stroke={COLORS.primerGreen} strokeWidth="5" fill="none" strokeLinecap="round" />
      {/* Cutout to suggest motion */}
      <circle cx="58" cy="48" r="6" fill={COLORS.black} />
    </svg>
  );
}

// -----------------------------
// Reusable UI bits
// -----------------------------
function PrimaryButton({ children }) {
  return (
    <button className="px-6 py-3 rounded-xl font-semibold shadow-md" style={{ backgroundColor: COLORS.primerGreen, color: COLORS.white }}>
      {children}
    </button>
  );
}

function SecondaryButton({ children }) {
  return (
    <button className="px-4 py-2 rounded-lg font-medium border" style={{ borderColor: COLORS.softGray, color: COLORS.black, backgroundColor: COLORS.white }}>
      {children}
    </button>
  );
}

